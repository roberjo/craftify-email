{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./apps/web/src/*"
            ],
            "@shared/*": [
                "./packages/shared/*"
            ],
            "@ui/*": [
                "./packages/ui/*"
            ],
            "@editor/*": [
                "./packages/editor/*"
            ]
        }
    },
    "include": [
        "apps/**/*",
        "packages/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "build"
    ],
    "references": [
        {
            "path": "./apps/web"
        },
        {
            "path": "./apps/api"
        },
        {
            "path": "./packages/shared"
        },
        {
            "path": "./packages/ui"
        },
        {
            "path": "./packages/editor"
        }
    ]
}